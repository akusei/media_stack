---
setup.dashboards.enabled: false
setup.template.enabled: false
setup.ilm.enabled: false
filebeat.registry.path: /registry

logging.level: error

filebeat.inputs:
  - type: log
    index: logs-traefik.access-prod
    pipeline: traefik-pipeline
    paths:
      - /logs/traefik/access.log*

  {# - type: log
    index: logs-authelia.access-prod
    pipeline: traefik-pipeline
    paths:
      - /logs/authelia/access.log*

  - type: log
    index: logs-bitwarden.access-prod
    pipeline: traefik-pipeline
    paths:
      - /logs/traefik/access.log* #}

  - type: syslog
    index: logs-authelia.access-prod
    pipeline: authelia-pipeline
    protocol.tcp:
      host: "0.0.0.0:515"
    processors:
      - drop_fields:
          fields:
            - event
            - syslog
          ignore_missing: true

  - type: syslog
    index: logs-bitwarden.access-prod
    pipeline: bitwarden-pipeline
    protocol.tcp:
      host: "0.0.0.0:516"
    processors:
      - drop_fields:
          fields:
            - event
            - syslog
          ignore_missing: true

  # - type: log
  #   index: ecs-authelia-1.8.0
  #   pipeline: authelia-pipeline
  #   paths:
  #     - /logs/authelia/authelia.log
  #
  {# - type: log
      index: logs-bitwarden.access-prod
      pipeline: bitwarden-pipeline
      paths:
        - /logs/bitwarden/bitwarden.log* #}

  # - type: log
  #   index: ecs-fail2ban-1.8.0
  #   pipeline: fail2ban-pipeline
  #   paths:
  #   - /logs/fail2ban/fail2ban.log
  #
  # - type: log
  #   index: ecs-traefik-1.8.0
  #   pipeline: traefik-pipeline
  #   paths:
  #   - /logs/traefik/access.log

  - type: udp
    pipeline: router-pipeline
    host: "0.0.0.0:514"

{# output.console:
  pretty: true #}

output.elasticsearch:
  hosts:
    - http://elasticsearch:9200
  username: {{ vault_elastic_username }}
  password: {{ vault_elastic_password }}
